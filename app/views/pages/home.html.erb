<style>
  body {
  margin: 0;
  background: black url('/KaliLinuxWallpaper.jpg') no-repeat center center fixed;
  background-size: cover;
  font-family: "Courier New", monospace;
  text-align: center;
  color: #39ff14; /* Neon green */
  position: relative;
  z-index: 0;
}

/* Overlay to control opacity */
body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.6; /* makes wallpaper 80% visible */
  z-index: -1;
}


  /* Big Welcome Text */
  h1 {
    font-size: 80px;
    margin-top: 120px;
    text-shadow: 0 0 15px #39ff14, 0 0 30px #39ff14;
    animation: glow 2s infinite alternate;
  }

  @keyframes glow {
    from { text-shadow: 0 0 10px #39ff14; }
    to   { text-shadow: 0 0 25px #39ff14, 0 0 50px #39ff14; }
  }

  p {
    font-size: 22px;
    margin: 20px 0 40px;
  }

  /* Authorize Button */
  #authorize-btn {
    background: none;
    border: 3px solid #39ff14;
    color: #39ff14;
    padding: 20px 60px;
    font-size: 28px;
    cursor: pointer;
    border-radius: 12px;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 0 10px #39ff14;
  }

  /* Pop-up effect on hover */
  #authorize-btn:hover {
    transform: scale(1.15);
    background: #39ff14;
    color: black;
    box-shadow: 0 0 25px #39ff14, 0 0 50px #39ff14;
  }

  /* Video screen (same as before) */
  #video-screen {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    overflow: hidden;
  }

  #video-screen video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #video-screen .overlay-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #39ff14;
    font-size: 36px;
    font-weight: bold;
    text-shadow: 0 0 10px #39ff14, 0 0 20px #39ff14;
  }
</style>

<div id="main-content">
  <h1>WELCOME TO SHIKHER'S PORTFOLIO</h1>
  <br>
  <br>
  <p>Click below to authorize</p>
  <br>
  <br>
  <br>
  
  <button id="authorize-btn">Authorize</button>
</div>

<!-- Video screen -->
<div id="video-screen">
  <video autoplay muted>
    <source src="/background.mp4" type="video/mp4">
    Your browser does not support video.
  </video>
  <div class="overlay-text"></div>
</div>

<script>
  document.getElementById("authorize-btn").addEventListener("click", function() {
    document.getElementById("main-content").style.display = "none";
    document.getElementById("video-screen").style.display = "block";

    setTimeout(function() {
      window.location.href = "<%= portfolio_path %>";
    }, 9000);
  });
</script>
